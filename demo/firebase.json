{
  "hosting": [
    {
      "target": "www",
      "public": "www/dist",
      "ignore": ["firebase.json", "**/node_modules/**"],
      "headers": [
        {
          "source": "**",
          "headers": [
            { "key": "Cache-Control", "value": "public, max-age=3600" }
          ]
        }
      ]
    },
    {
      "target": "agents",
      "public": "agents/dist",
      "ignore": ["firebase.json", "**/node_modules/**"],
      "rewrites": [
        { "source": "/", "destination": "/index.md" }
      ],
      "headers": [
        {
          "source": "**/*.md",
          "headers": [
            { "key": "Content-Type", "value": "text/markdown; charset=utf-8" },
            { "key": "Cache-Control", "value": "public, max-age=3600" }
          ]
        },
        {
          "source": "/",
          "headers": [
            { "key": "Content-Type", "value": "text/markdown; charset=utf-8" },
            { "key": "Cache-Control", "value": "public, max-age=3600" }
          ]
        }
      ]
    }
  ]
}
